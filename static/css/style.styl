@import url(http://fonts.googleapis.com/css?family=Open\+Sans:400,300,600,700);

header-height = 50

// Colors
color-bg-site = rgb(18 19 20)
color-bg-sidebar = rgb(34 35 38)

color-text-site = rgb(223 224 230)
color-text-dark = rgb(143 149 148)

color-green = rgb(95 135 0)
color-green-light = rgb(132 189 0)
color-red = rgb(251 95 73)

color-apple-red = color-apple-red
color-apple-yellow = rgb(250 183 14)
color-apple-green = rgb(26 198 50)
// End Colors


html, body
    height: 100%
    font-family: 'Open Sans', sans-serif;
    background: color-bg-site

#layout
    width: 100%
    height: 100%
    .ui-layout-center, .ui-layout-east, .ui-layout-west
        padding-top: 55px !important
        background: color-bg-site !important
        color: color-text-site !important
        border: none!important
    .ui-layout
        width = 5px
        &-toggler
            width: width !important
            background: color-bg-sidebar + 20 !important
        &-resizer
            width: width !important
            background: color-bg-sidebar !important
            border: none!important
            cursor: col-resize!important

#playlist
    li
        text-overflow: ellipsis
        white-space: nowrap
        width: 100%
        overflow: hidden

.default
    margin: 0
    padding: 0


.btn-round
    border-radius 150px

.btn
    padding-left: 25px
    padding-right: 25px
    &-border
        &-green
            border: 2px solid color-green
            background color-bg-site
            color: color-text-site
            &:hover
                border: 2px solid color-text-site
                background color-bg-site
                color: color-text-site